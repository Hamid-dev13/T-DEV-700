{
  "name": "mon-projet-fullstack",
  "version": "1.0.0",
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up -d",
    "dev:build": "docker-compose -f docker-compose.dev.yml up -d --build",
    "dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "db:migrate": "docker-compose -f docker-compose.dev.yml exec backend npm run drizzle:migrate",
    "clean": "docker-compose -f docker-compose.dev.yml down -v"
  }
}
